{
  "name": "omucycle",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 5180",
    "dev:server": "node --import tsx server/index.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "dev:start": "./scripts/dev-server.sh start",
    "dev:stop": "./scripts/dev-server.sh stop",
    "dev:restart": "./scripts/dev-server.sh restart",
    "dev:restart-api": "./scripts/dev-server.sh restart-api",
    "dev:status": "./scripts/dev-server.sh status",
    "dev:logs": "./scripts/dev-server.sh logs",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "db:init": "node --import tsx server/db/init.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/uuid": "^10.0.0",
    "better-sqlite3": "^12.5.0",
    "hono": "^4.10.8",
    "uuid": "^13.0.0",
    "vue": "^3.5.24",
    "vue-router": "^4.5.0",
    "pinia": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "concurrently": "^9.1.3",
    "tsx": "^4.19.4",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vue-tsc": "^3.1.4"
  }
}
