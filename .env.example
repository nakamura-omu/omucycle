API_PORT=3180

# Frontend Dev Server Port (default: 5180)
# Mastra dev uses 4112, Vite default is 5173
VITE_PORT=5180

# Claude API Key (for AI features)
ANTHROPIC_API_KEY=

# Database (SQLite, stored in data/omucycle.db)
